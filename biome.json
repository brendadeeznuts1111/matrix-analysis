{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"files": {
		"includes": [
			"src/**",
			".claude/**",
			"tools/**",
			"cli/**",
			"mcp-bun-docs/**",
			"!node_modules/**",
			"!dist/**"
		]
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 89
	},
	"javascript": {
		"globals": [
			"Bun",
			"process",
			"fetch",
			"Request",
			"Response",
			"Headers",
			"WebSocket"
		],
		"formatter": {
			"semicolons": "always",
			"quoteStyle": "double",
			"trailingCommas": "all"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"useNodejsImportProtocol": "off"
			},
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"noUndeclaredVariables": "error"
			},
			"suspicious": {
				"noConsole": "warn",
				"noDebugger": "error"
			}
		}
	}
}
