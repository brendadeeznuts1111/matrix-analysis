# R2/S3 Configuration for Persistent Violation Storage
# Copy this file to .env and fill in your credentials

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_here
R2_SECRET_ACCESS_KEY=your_secret_key_here
R2_BUCKET=tier1380-violations
R2_REGION=auto

# Optional: Custom S3-compatible endpoint
# R2_ENDPOINT=https://your-s3-compatible-endpoint.com

# Cloudflare Region (for metadata)
CLOUDFLARE_REGION=us-east-1

# SSE Server Configuration
SSE_PORT=1381

# Redis Configuration (for multi-instance sync)
# REDIS_URL=redis://localhost:6379

# Development Mode
NODE_ENV=development
