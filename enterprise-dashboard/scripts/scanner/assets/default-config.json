{
  "name": "Bun Enterprise Scanner",
  "version": "3.0.0",
  "thresholds": {
    "maxIssues": 10,
    "minScore": 80,
    "errorExitCode": 1
  },
  "ignore": [
    "node_modules",
    "dist",
    "*.test.ts",
    "*.spec.ts",
    "*.d.ts"
  ],
  "rules": {
    "deps": true,
    "perf": true,
    "compat": true,
    "security": true
  },
  "output": {
    "format": "table",
    "colors": true,
    "verbose": false
  },
  "profile": {
    "enabled": false,
    "outputDir": "./traces"
  }
}
