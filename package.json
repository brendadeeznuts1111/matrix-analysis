{
  "name": "nolarose-mcp-config",
  "version": "1.0.1",
  "description": "MCP server configuration with Bun native support and RSS integration",
  "type": "module",
  "main": "./src/cli.ts",
  "module": "./src/cli.ts",
  "bin": {
    "matrix": "./src/cli.ts",
    "nolarose-mcp-config": "./src/cli.ts"
  },
  "exports": {
    ".": "./src/cli.ts",
    "./lib/*": "./src/lib/*.ts",
    "./commands/*": "./src/commands/*.ts"
  },
  "scripts": {
    "mcp:inspector": "bun x @modelcontextprotocol/inspector",
    "mcp:bun-docs": "bun mcp-bun-docs/index.ts",
    "mcp:bun-test": "bun bun-mcp-test.ts",
    "mcp:bun-test:suite": "bun test ./bun-mcp.test.ts ./mcp-bun-docs/search-bun.test.ts",
    "mcp:example:manifest": "bun mcp-bun-docs/examples/manifest-fetch.example.ts",
    "mcp:example:search": "bun mcp-bun-docs/examples/search-bun.example.ts",
    "mcp:matrix": "bun mcp-bun-docs/matrix-view.ts",
    "mcp:ci-validate": "bun mcp-bun-docs/scripts/ci-validate-entries.ts",
    "mcp:secure-test": "bun mcp-bun-docs/scripts/secure-test-runner.ts",
    "matrix:validate": "bun mcp-bun-docs/scripts/matrix-validate.ts",
    "matrix:rss": "bun mcp-bun-docs/scripts/matrix-rss.ts",
    "tier1380:seal": "bun mcp-bun-docs/scripts/tier1380-seal.ts",
    "mcp:rss": "bun x rss-mcp",
    "dev": "bun run .claude/examples/enterprise/shop-server.ts",
    "matrix": "bun run src/cli.ts",
    "bytes": "bun run .claude/examples/enterprise/bytes-cli.ts",
    "bytes:summary": "bun run .claude/examples/enterprise/bytes-cli.ts --summary",
    "bytes:details": "bun run .claude/examples/enterprise/bytes-cli.ts --details",
    "matrix:cli": "bun run .claude/examples/enterprise/matrix-cli.ts",
    "matrix:all": "bun run .claude/examples/enterprise/matrix-cli.ts --all",
    "matrix:summary": "bun run .claude/examples/enterprise/matrix-cli.ts --summary",
    "jsonl": "bun run .claude/examples/enterprise/jsonl-cli.ts",
    "jsonl:chunk": "bun run .claude/examples/enterprise/jsonl-cli.ts --chunk",
    "jsonl:error": "bun run .claude/examples/enterprise/jsonl-cli.ts --error",
    "jsonl:api": "bun run .claude/examples/enterprise/jsonl-cli.ts --api",
    "routes": "bun run .claude/examples/enterprise/routes-cli.ts",
    "routes:search": "bun run .claude/examples/enterprise/routes-cli.ts -s",
    "routes:cat": "bun run .claude/examples/enterprise/routes-cli.ts -c",
    "routes:groups": "bun run .claude/examples/enterprise/routes-cli.ts -g",
    "routes:all": "bun run .claude/examples/enterprise/routes-cli.ts -a",
    "r": "bun run routes",
    "rs": "bun run routes:search",
    "rg": "bun run routes:groups",
    "m": "bun run matrix:cli",
    "ma": "bun run matrix:all",
    "ms": "bun run matrix:summary",
    "b": "bun run bytes",
    "j": "bun run jsonl",
    "jc": "bun run jsonl:chunk",
    "test": "bun test",
    "test:grep": "bun test --test-name-pattern",
    "test:tz": "TZ=${TZ:-UTC} bun test",
    "test:coverage": "bun test --coverage",
    "test:preload": "bun test --preload ./test-setup.ts --preload ./global-mocks.ts",
    "test:env": "bun test --env-file=.env.test",
    "test:ci": "bun test --config=ci",
    "test:dry-run": "bun test --dry-run",
    "test:verbose": "bun test --verbose",
    "migrate": "bun tools/arm64/wrap-migrator.ts",
    "migrate:dry": "bun tools/arm64/wrap-migrator.ts --dry-run",
    "migrate:verbose": "bun tools/arm64/wrap-migrator.ts --verbose",
    "benchmark": "bun tools/arm64/benchmark-arm64.ts",
    "benchmark:output": "bun tools/arm64/benchmark-arm64.ts --output",
    "guardian": "bun tools/arm64/guardian.ts",
    "verify:arm64": "bun tools/arm64/verify-arm64.ts",
    "verify:arm64:output": "bun tools/arm64/verify-arm64.ts --output",
    "demo": "bun tools/arm64/arm64-demo.ts",
    "tension:status": "bun tools/tension-status.ts",
    "tension:debug": "bash tension-debug-master.sh",
    "tension:search": "bun tools/bun-search.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/server-filesystem": "latest",
    "@modelcontextprotocol/server-sequential-thinking": "latest",
    "@modelcontextprotocol/server-puppeteer": "latest",
    "@upstash/context7-mcp": "latest",
    "mcp-bun": "latest",
    "rss-mcp": "^1.0.1",
    "ts-morph": "^21.0.0",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "latest",
    "@types/semver": "^7.5.6"
  },
  "mcp": {
    "servers": {
      "bun": {
        "command": "bun",
        "args": ["run", "node_modules/mcp-bun/dist/index.js"],
        "env": {
          "DISABLE_NOTIFICATIONS": "true"
        },
        "description": "Bun runtime integration for JavaScript/TypeScript execution (Bun native)"
      },
      "bun-docs": {
        "command": "bun",
        "args": ["mcp-bun-docs/index.ts"],
        "description": "SearchBun - Search Bun docs (bun.com/docs/mcp). API refs, code examples, guides."
      },
      "context7": {
        "command": "bun",
        "args": ["run", "node_modules/@upstash/context7-mcp/dist/index.js"],
        "description": "Context7 documentation and code search"
      },
      "filesystem": {
        "command": "bun",
        "args": ["run", "node_modules/@modelcontextprotocol/server-filesystem/dist/index.js", "/Users/nolarose"],
        "description": "File system access for project operations"
      },
      "sequential-thinking": {
        "command": "bun",
        "args": ["run", "node_modules/@modelcontextprotocol/server-sequential-thinking/dist/index.js"],
        "description": "Structured problem-solving and reasoning tool"
      },
      "puppeteer": {
        "command": "bun",
        "args": ["run", "node_modules/@modelcontextprotocol/server-puppeteer/dist/index.js"],
        "description": "Browser automation for testing and web scraping",
        "env": {
          "HEADLESS": "true"
        }
      },
      "rss": {
        "command": "bun",
        "args": ["run", "node_modules/rss-mcp/dist/index.js"],
        "description": "RSS feed reader and parser for news aggregation",
        "env": {
          "RSS_MAX_ITEMS": "50",
          "RSS_CACHE_TTL": "300"
        }
      }
    }
  },
  "keywords": ["bun", "mcp", "dashboard", "telemetry"]
}